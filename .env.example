# Copy this file to .env and fill in your values.
# All variables use the SEC_LLM_ prefix and are read automatically at startup.

# --- Required for full LLM functionality ---
# Get yours at https://platform.openai.com/api-keys
SEC_LLM_OPENAI_API_KEY=""

# Required by SEC fair-use policy: https://www.sec.gov/developer
# Use your real name and email address.
SEC_LLM_EDGAR_IDENTITY="Your Name your@email.com"

# --- Optional: LLM model selection ---
SEC_LLM_PLANNER_MODEL="gpt-4o"
SEC_LLM_SUMMARIZER_MODEL="gpt-4o-mini"
SEC_LLM_CLARIFICATION_MODEL="gpt-4o"

# --- Optional: runtime tuning ---
SEC_LLM_SEC_CACHE_TTL_SECONDS=900
SEC_LLM_RATE_LIMIT_PER_MINUTE=20
SEC_LLM_CORS_ORIGINS='["http://localhost:3000"]'
